<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".DessertFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.appcompat.widget.SearchView
        android:layout_width="match_parent"
        app:queryHint="search"
        app:iconifiedByDefault="false"
        android:id="@+id/food_fragment_dessert_fragment_searchview_id"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/dessert_listview_id"
            android:layout_width="match_parent"
            android:nestedScrollingEnabled="true"
            android:layout_height="match_parent"
            android:listSelector="@color/gray_light" />

        <ImageView
            android:id="@+id/add_dessert_button_id"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/add_logo"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="80dp" />
    </RelativeLayout>

</LinearLayout>