<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:context=".BmiActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:textAppearance="?android:textAppearanceMedium"
            android:gravity="center"
            android:text="Weight is not calculated yet"
            android:id="@+id/weight_textview_id"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:textAppearance="?android:textAppearanceMedium"
            android:gravity="center"
            android:text="Height is not calculated yet"
            android:id="@+id/Height_textview_id"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:textAppearance="?android:textAppearanceMedium"
            android:text="Bmi is not calculated yet"
            android:gravity="center"
            android:id="@+id/bmi_Textview_Id"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"/>


        <Button
            android:layout_width="wrap_content"
            android:text="Calculate"
            android:id="@+id/calculateBmiButtonId"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</ScrollView>